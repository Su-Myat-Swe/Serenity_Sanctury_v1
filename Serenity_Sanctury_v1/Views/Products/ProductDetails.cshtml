@model Product
@*
   
*@
@{
    var imageUrl = Url.Content(Model.ImageUrl);
}
<!-- Page Content -->
<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">
        @Model.ProductName
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-5">
            <!--pDebug URL:imageUrlp-->
            <img class="image-fluid" src="@imageUrl" alt="Product Image">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Product Details</h3>
            <p>@Model.Description</p>
            <ul>
                <li>@Model.Scent</li>
                <li>@Model.BurnTime</li>
                <li>@Model.Size</li>
                <li>@Model.Container</li>
                <li>@Model.Price.ToString("C")</li>
            </ul>
            <div class="mt-3">
                <button type="button" class="btn2" onclick="location.href='@Url.Action("Index", "Cart", new { id = Model.ProductID })'">Add to Cart</button>
                <button type="button" class="btn2" style="margin-left: 10px;" onclick="location.href='@Url.Action("BuyNow", "Cart", new { id = Model.ProductID })'">Buy Now</button>
            </div>
        </div>

    </div>
    <!-- /.row -->
    <!-- Related Projects Row -->
    <h3 class="my-4">Related Products</h3>

    <div class="row">

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="@Url.Content(Model.ImageUrl)" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
