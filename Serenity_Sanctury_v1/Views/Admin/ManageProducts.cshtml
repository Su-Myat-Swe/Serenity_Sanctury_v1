@{
    ViewBag.Title = "Manage Products";
}
<h2>Product List</h2>
<a asp-controller="Admin" asp-action="Add">Add New Product</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Color</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>ImageUrl</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Category</td>
                <td>@product.Description</td>
                <td>@product.Color</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
                <td>@product.ImageUrl</td>
                <td>
                    <a asp-controller="Admin" asp-action="Edit" asp-route-id="@product.ProductID">Edit</a>
                    <a asp-controller="Admin" asp-action="Delete" asp-route-id="@product.ProductID">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>
