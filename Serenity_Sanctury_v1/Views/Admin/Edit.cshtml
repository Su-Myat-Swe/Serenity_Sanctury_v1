@{
}
@model Serenity_Sanctury_v1.Models.Product

@{
    string title = ViewBag.Action + " Product";
    ViewBag.Title = title;
}

<h1 class="text-center text-decoration-underline mt-4">@title</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group  mt-4 fw-bold">
        <label asp-for="ProductName">Product Name</label>
        <input asp-for="ProductName" class="form-control">
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group  mt-4 fw-bold">
        <label asp-for="Category">Category</label>
        <select asp-for="Category" class="form-control">
            <option value="">Select a category</option>
            @foreach (var category in Enum.GetValues(typeof(Serenity_Sanctury_v1.Data.Enum.Category)))
            {
                <option value="@category">@category</option>
            }
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group  mt-4 fw-bold">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group  mt-4 fw-bold">
        <label asp-for="Scent">Scent</label>
        <input asp-for="Scent" class="form-control">
        <span asp-validation-for="Scent" class="text-danger"></span>
    </div>

    <div class="form-group  mt-4 fw-bold">
        <label asp-for="Container">Container</label>
        <input asp-for="Container" class="form-control">
        <span asp-validation-for="Container" class="text-danger"></span>
    </div>

    <div class="form-group  mt-4 fw-bold">
        <label asp-for="Size">Size</label>
        <input asp-for="Size" class="form-control">
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>

    <div class="form-group  mt-4 fw-bold">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group  mt-4 fw-bold">
        <label asp-for="Quantity">Quantity</label>
        <input asp-for="Quantity" class="form-control">
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group  mt-4 fw-bold">
        <label asp-for="ImageUrl">ImageURL</label>
        <input asp-for="ImageUrl" class="form-control">
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group  mt-4 fw-bold">
        <label>Image Preview</label><br />
        <img src="@Url.Content(Model.ImageUrl)" alt="Product Image" class="img-thumbnail w-25 h-25" />
    </div>

    <input type="hidden" asp-for="ProductID" />

    <div class="mt-3 ms-5">
    <button type="submit" class="admin p-2 text-white rounded fw-bold" style="background-color:forestgreen; text-decoration:none;width:100px;border:none;">Save</button>
        <a asp-controller="Admin" asp-action="ManageProducts" class="admin text-center p-2 text-white rounded fw-bold ms-3" style=" background-color:gray; text-decoration:none; width:100px; border:none; display:inline-block;">Cancel</a>
    </div>
</form>