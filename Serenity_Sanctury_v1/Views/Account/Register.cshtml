﻿@using Serenity_Sanctury_v1.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Sign up";
}

<body>
    <div class="container">
        <form asp-action="Register" class="login-form" style="padding-top:80px;">
            <div class="mb-3 bg p-5 rounded" style="box-shadow: 2px 2px 3px 2px darkgray;">
                <h2 class="text-center mb-4 text-white">Create an account</h2>

                @* Display error message if present *@
                @if (TempData["Error"] != null)
                {
                    <div class="col-md-12 alert alert-danger">
                        <span><b>Sorry!</b> - @TempData["Error"]</span>
                    </div>
                }

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-4">
                    <label asp-for="Email" class="control-label fw-bold text-white"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <label asp-for="Password" class="control-label fw-bold text-white"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <label asp-for="ConfirmPassword" class="control-label fw-bold text-white"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group d-flex justify-content-center mt-3">
                    <input class="btn-login float-right w-50 mt-3 fw-bold rounded border" type="submit" value="Sign Up" />
                    <a class="btn btn-outline-secondary ms-4 mt-3 w-50 fw-bold text-white border" asp-controller="Home" asp-action="Index">Cancel</a>
                </div>

                <div class="form-group mt-4 d-flex justify-content-center">
                    <p class="text-center text-white">Already have an account? --></p>
                    <a class="text-white fw-bold ms-1" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                </div>
            </div> 
        </form>
    </div>
</body>