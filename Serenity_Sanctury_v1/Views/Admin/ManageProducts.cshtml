@{
    ViewBag.Title = "Manage Products";
}
<h1 class="text-center text-decoration-underline mt-4">Product List</h1>
<a class="admin p-2 text-white rounded fw-bold mt-4 mb-4 text-center" style="background-color:forestgreen; text-decoration:none;width:200px; display:inline-block;" asp-controller="Admin" asp-action="Add">Add New Product</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Color</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Image</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Category</td>
                <td>@product.Description</td>
                <td>@product.Scent</td>
                <td>@product.Container</td>
                <td>@product.Size</td>
                <td>@product.Price</td>
                <td>@product.BurnTime</td>
                <td>@product.Quantity</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@Url.Content(product.ImageUrl)" alt="Product Image" style="max-width: 100px; max-height: 100px;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td class="text-center align-middle">
                    <a class="admin p-2 text-white rounded fw-bold" style="background-color:#7776B3; text-decoration:none;width:70px; display:inline-block;" asp-controller="Admin" asp-action="Edit" asp-route-id="@product.ProductID">Edit</a>
                    </td>
                <td class="text-center align-middle">
                    <a class="admin p-2 text-white rounded fw-bold" style="background-color:red; text-decoration:none;width:70px; display:inline-block;" asp-controller="Admin" asp-action="Delete" asp-route-id="@product.ProductID">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>
